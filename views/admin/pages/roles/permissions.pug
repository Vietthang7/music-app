          tr
            td(colspan="4")
              b Quản lý chủ đề
          tr
            td Xem
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id 
                  data-name="topics_view"
                  checked=(item.permissions.includes("topics_view") ? true : false)
                )
          tr
            td Thêm mới
            each item in records
