extends ../../layouts/default.pug

block main
  if (topic.title)
    h1(class="mb-4") #{topic.title}

  if (topic.avatar)
    div(class="mb-4")
      img(
        src=topic.avatar
        style="width: 100px"
      )

  if (topic.status)
    div(class="mb-4")
      span Trạng thái:
      if (topic.status === "active")
        span(class="badge badge-success") Hoạt động
      else
        span(class="badge badge-danger") Dừng hoạt động

  if (topic.description)
    div(class="mb-4") Mô tả:!{topic.description}