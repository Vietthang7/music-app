extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head("Top Bài Hát Được Nghe Nhiều Nhất")
    if(songs.length > 0)
      .col-10
        each item,index in songs
          .col-6.mb-3
            div(class="song-item")
              div(class="inner-rank")
                td #{index+1}
              div(class="inner-image")
                a(href=`/songs/detail/${item.slug}`)
                  img(src=item.avatar)
              div(class="inner-content")
                div(class="inner-title")
                  a(href=`/songs/detail/${item.slug}`) #{item.title}
                div(class="inner-singer")
                  <i class="fa-solid fa-microphone-lines mr-1"></i>
                  | #{item.singerFullName}
                div(class="inner-listen")
                  <i class="fa-solid fa-headphones mr-1"></i> 
                  <span class="inner-number mr-1">#{item.listen}</span>
                  | Lượt nghe
                div(class="inner-like") 
                  <i class="fa-solid fa-thumbs-up mr-1"></i>
                  | #{item.like}
    else
      p
        i Không có bài hát nào.